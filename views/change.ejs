<% include change-javascript %>
<body style="background-image: url(../images/blue.jpg);background-repeat: no-repeat;background-attachment: fixed;background-position: center;background-size: cover;">
<div class="container" align="center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4" style="margin-top: 25vh;">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">更改會員密碼</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" autocomplete="off"> <!--action 為 後端change-->
                            <fieldset>
                                <div class="form-group" id="newPas1">
                                    <label for="newPas" class="control-label" id="Npas"></label>
                                    <font face="微軟正黑體">
                                    <input class="form-control" placeholder="輸入新密碼" type="password" name="newPas" id="newPas" onkeyup="ispassword(this.value);pwdcheck(this.value)" maxlength="20">
                                    </font>
                                </div>
                                <div  class="form-group" id="chnewPasw">
                                    <label for="chnewPas" class="control-label" id="NCpas"></label>
                                    <font face="微軟正黑體">
                                        <input class="form-control" placeholder="確認新密碼" type="password" name="chnewPas" id="chnewPas" onkeyup="ispwok(this.value)" maxlength="20">
                                    </font>
                                </div>
                                <div class="form-group">
                                    <font face="微軟正黑體"><%= user.password[0] %>************</font>
                                </div>
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="更改" onclick="Checkform()">
                                <b>如果不更改該資料，則該欄位為空</b>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<% include footer %>