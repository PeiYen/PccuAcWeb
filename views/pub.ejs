            $(document).on('click', function (e) {
                var $a = $(e.target);   //获取点击目标

                if($a.is('.upimg') && !$a.is('.screenimg')){
                    bigimg();
                }else{
                    normalimg();
                };

                function bigimg() {
                    var sw = $('body').width() / 2 || $(window).width() / 2,    //獲得瀏覽器可是區域的寬度
                        sh = $('body').height() / 2 || $(window).height() / 2,    //獲得瀏覽器可是區域的高度
                        w = $a.width(),     //獲得圖片本身寬
                        h = $a.height(),    //獲得圖片本身高
                        sc = $a.width() / $a.height(),   //獲得圖片的比例
                        st = $('body').scrollTop() || $(document).scrollTop();   //獲取document被捲出去的值
                        t = sh - (900 / sc / 2) + st,  //獲得圖片在可是區域垂直座標的位置 
                        l = sw /1.4;    //計算圖片在可是區域橫向座標的位置  
                        console.log(l);
                        console.log(t);
                    if (protoWidth === 0) {
                        protoWidth = w;
                        protoHeight = h;
                    };
                    $('html').height(sh*2).css('overflow','hidden');
                    $a.css({'position': 'absolute', 'width': 0}).animate({'width': 800,'top':t/2.8 ,'left': l},1).addClass('screenimg');
                    $('.cover').animate({'top':st},0).fadeIn(200); //fadeIn淡入
                };

                function normalimg() {
                    $('html').height('100%').css('overflow','');
                    $('.screenimg').animate({'width': protoWidth}, 0).css({'position': '','top': '','left': ''}).removeClass('screenimg');
                    $('.cover').fadeOut(300).animate({'top':0},200);
                };
            });
        });
</script>
