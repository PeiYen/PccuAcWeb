<% include header %>
<body>
<div class="container" align="center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">更改姓名</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" autocomplete="off"> <!--action 為 後端change-->
                            <fieldset>
                                <div class="form-group" id="newName">
                                    <label for="newName" class="control-label" id="Npas"></label>
                                    <font face="微軟正黑體">
                                    <input class="form-control" placeholder="<%= user.name %>" type="text" name="newName" id="newName" onkeyup="isName(this.value);" maxlength="20">
                                    </font>
                                </div>
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="更改" onclick="Checkform()">                           
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
		function isName(Name){ //限制中文名字格式
		if(Name.search(/^[\u4e00-\u9fa5]{2,}$/) !=-1 || Name.search(/^[A-Za-z]{2,}$/) !=-1 ){  // \u4e00-\u9fa5 中文正規
			document.getElementById("newName").className="form-group has-success";
			document.getElementById("Npas").innerHTML="";
		}
		else if(Name==""){
			document.getElementById("newName").className="form-group";
			document.getElementById("Npas").innerHTML="";
		}
		else{
		document.getElementById("newName").className="form-group has-error";	
		document.getElementById("Npas").innerHTML="請確認名字是否大於2個字且不含數字特殊符號";
		}
	}
	function Checkform(){ //核對所有欄位都為success的狀態
		var chname = document.getElementById("newName").className;
		if(chname == "form-group has-success" ){
			return true;
		}
		else {
			event.preventDefault();
		}
	}
</script>
<% include footer %>