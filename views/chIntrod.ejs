<% include header %>
<body style="background-image: url(../images/blue.jpg);background-repeat: no-repeat;background-attachment: fixed;background-position: center;background-size: cover;">
<div class="container" align="center" >
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" style="height:50vh;margin-top: 25vh;">
                    <div class="panel-heading">
                        <font face="微軟正黑體"><h3 class="panel-title"><b>更改自介</b></h3></font>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" autocomplete="off"> <!--action 為 後端change-->
                            <fieldset>
                                <div class="form-group" id="newName">
                                    <label for="newName" class="control-label" id="Npas"></label>
                                    <font face="微軟正黑體">
                                    <textarea class="form-control"  type="text" name="Introd" id="Introd" style="height:130px;" maxlength="250"><%= user.Introd %></textarea>
                                    </font>
                                </div>
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="更改"  onclick="Checkform()">                           
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    function Checkform(){ //核對所有欄位都為success的狀態
            return true;
    }
</script>
<% include footer %>